<div class="main-header">
 <div class="chat-group">
   <div class="chatgroup-name">hogehuga</div>
 </div>
 <div class="close-room">
   <a href="#">チャットを終了する</a>
 </div>
</div>

<div class="messages">
 <div class="message">
   <div class="box1">
    <div class="message-name">Tom</div>
    <div class="text-date">2022/06/19(Sun) 12:30:30</div>
   </div>
   <div class="box2"></div>
    <div class="message-text">おはよう</div>
 </div>

 <div class="message">
   <div class="box1">
    <div class="message-name">Tom</div>
    <div class="text-date">2022/06/19(Sun) 14:30:30</div>
   </div>
   <div class="box2"></div>
    <div class="message-text">こんにちは</div>
 </div>
</div>


<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
  <% end %>
