<div class="message">
  <div class="box1">
    <div class="message-name">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>

    </div>
    <div class="text-date">
      <!-- 投稿した時刻を出力する -->
      <%= message.created_at %>

    </div>
  </div>
  <div class="box2">
    <div class="message-text">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= message.content %>

    </div>
  </div>
</div>